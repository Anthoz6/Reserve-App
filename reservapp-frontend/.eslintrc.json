{
  "extends": [
    "next/core-web-vitals", // Base de Next.js + web vitals
    "next/typescript", // Reglas específicas de TS
    "eslint-config-prettier" // Desactiva reglas que interfieren con Prettier
  ],
  "plugins": ["unused-imports", "@typescript-eslint"],
  "rules": {
    // Limpieza automática de imports
    "unused-imports/no-unused-imports": "warn",

    // Ignora variables y argumentos con "_" al inicio
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],

    "@typescript-eslint/no-unused-vars": "off",

    // Opcional: baja la severidad de `any` si estás prototipando
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
